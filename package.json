{
  "name": "ember-cli-bundle-analyzer",
  "version": "0.2.2",
  "description": "Analyze the size and contents of your Ember app's bundles",
  "keywords": [
    "ember-addon",
    "bundlesize",
    "bundle-analyzer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kaliber5/ember-cli-bundle-analyzer"
  },
  "license": "MIT",
  "author": "Simon Ihmig <ihmig@kaliber5.de>",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint .",
    "start": "ember serve",
    "test": "mocha node-tests/**/*-test.js --recursive"
  },
  "dependencies": {
    "broccoli-concat-analyser": "^5.0.0",
    "debug": "^4.3.2",
    "ember-cli-babel": "^7.26.6",
    "ember-cli-htmlbars": "^5.7.1",
    "ember-cli-version-checker": "^5.1.2",
    "hash-files": "^1.1.1",
    "intercept-stdout": "^0.1.2",
    "node-html-light": "^1.4.0",
    "sane": "^4.1.0",
    "tmp": "^0.2.1",
    "touch": "^3.1.0"
  },
  "devDependencies": {
    "@ember/optional-features": "^2.0.0",
    "@glimmer/component": "^1.0.4",
    "@glimmer/tracking": "^1.0.4",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "ember-auto-import": "^1.11.3",
    "ember-cli": "~3.22.0",
    "ember-cli-addon-tests": "^0.11.1",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-uglify": "^3.0.0",
    "ember-load-initializers": "^2.1.2",
    "ember-qunit": "^4.6.0",
    "ember-resolver": "^8.0.2",
    "ember-source": "~3.22.1",
    "ember-source-channel-url": "^3.0.0",
    "ember-template-lint": "^2.21.0",
    "ember-try": "^1.4.0",
    "eslint": "^7.32.0",
    "eslint-plugin-chai-expect": "^2.2.0",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-node": "^11.1.0",
    "loader.js": "^4.7.0",
    "mocha": "^8.4.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^14.10.0",
    "release-it-lerna-changelog": "^3.1.0"
  },
  "engines": {
    "node": "10.* || >= 12"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "before": "history-support-middleware",
    "demoURL": "https://cdn.rawgit.com/kaliber5/ember-cli-bundle-analyzer/bceb55a7/docs/demo.html"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
